<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>
            <corners
                android:topLeftRadius="100dp"
                android:topRightRadius="14dp"
                android:bottomLeftRadius="14dp"
                android:bottomRightRadius="100dp"
                />
            <gradient
                android:angle="45"
                android:centerX="50%"
                android:centerColor="#fff200"
                android:startColor="#ff6f00"
                android:endColor="#ff6f00"
                android:type="linear"
                />
            <padding
                android:left="0dp"
                android:top="0dp"
                android:right="0dp"
                android:bottom="0dp"
                />
            <size
                android:width="270dp"
                android:height="60dp"
                />
            <stroke
                android:width="3dp"
                android:color="#ff6f00"
                />
        </shape>
    </item>
    <item>
        <shape>
            <corners
                android:topLeftRadius="100dp"
                android:topRightRadius="14dp"
                android:bottomLeftRadius="14dp"
                android:bottomRightRadius="100dp"
                />
            <gradient
                android:angle="45"
                android:centerX="50%"
                android:centerColor="#ff6f00"
                android:startColor="#fff200"
                android:endColor="#fff200"
                android:type="linear"
                />
            <padding
                android:left="0dp"
                android:top="0dp"
                android:right="0dp"
                android:bottom="0dp"
                />
            <size
                android:width="270dp"
                android:height="60dp"
                />
            <stroke
                android:width="3dp"
                android:color="#ff6f00"
                />
        </shape>
    </item>
</selector>
