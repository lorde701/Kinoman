<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>
            <corners
                android:topLeftRadius="100dp"
                android:topRightRadius="14dp"
                android:bottomLeftRadius="14dp"
                android:bottomRightRadius="100dp"
                />
            <gradient
                android:angle="45"
                android:centerX="50%"
                android:centerColor="#B057FF"
                android:startColor="#350596"
                android:endColor="#350596"
                android:type="linear"
                />
            <padding
                android:left="0dp"
                android:top="0dp"
                android:right="0dp"
                android:bottom="0dp"
                />
            <size
                android:width="270dp"
                android:height="60dp"
                />
            <stroke
                android:width="3dp"
                android:color="#6A04B8"
                />
        </shape>
    </item>
    <item>
        <shape>
            <corners
                android:topLeftRadius="100dp"
                android:topRightRadius="14dp"
                android:bottomLeftRadius="14dp"
                android:bottomRightRadius="100dp"
                />
            <gradient
                android:angle="45"
                android:centerX="50%"
                android:centerColor="#350596"
                android:startColor="#B057FF"
                android:endColor="#B057FF"
                android:type="linear"
                />
            <padding
                android:left="0dp"
                android:top="0dp"
                android:right="0dp"
                android:bottom="0dp"
                />
            <size
                android:width="270dp"
                android:height="60dp"
                />
            <stroke
                android:width="3dp"
                android:color="#6A04B8"
                />
        </shape>
    </item>
</selector>
