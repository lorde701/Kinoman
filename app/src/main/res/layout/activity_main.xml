<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:background="@drawable/film_background">


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="bottom">

        <!--<Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Добавление"
            android:id="@+id/btn_add"
            android:layout_gravity="center_horizontal" />-->

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="добавить"
            android:id="@+id/btn_add"
            android:layout_gravity="center_horizontal" />

        <Button
            android:text="Выбор фильма"
            android:id="@+id/btn_select"
            android:textSize="22sp"
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:shadowDx="0"
            android:shadowDy="0"
            android:shadowRadius="15"
            android:layout_gravity="center_horizontal"
            android:textColor="#FFFFFF"
            android:shadowColor="#FFBFCA"
            android:layout_margin="5dp"
            android:background="@drawable/main_btn_select"/>

        <Button
            android:text="Поиск фильма"
            android:id="@+id/btn_search"
            android:textSize="22sp"
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:shadowDx="0"
            android:shadowDy="0"
            android:shadowRadius="15"
            android:layout_gravity="center_horizontal"
            android:textColor="#FFFFFF"
            android:shadowColor="#FFBFCA"
            android:layout_margin="5dp"
            android:background="@drawable/main_btn_search"/>

        <Button
            android:text="Просмотренные"
            android:id="@+id/btn_watched"
            android:textSize="22sp"
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:shadowDx="0"
            android:shadowDy="0"
            android:shadowRadius="15"
            android:layout_gravity="center_horizontal"
            android:textColor="#FFFFFF"
            android:shadowColor="#FFBFCA"
            android:layout_margin="5dp"
            android:background="@drawable/main_btn_watched"/>

        <Button
            android:text="Обновить"
            android:textSize="22sp"
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:shadowDx="0"
            android:shadowDy="0"
            android:shadowRadius="15"
            android:textColor="#FFFFFF"
            android:shadowColor="#FFBFCA"
            android:layout_margin="5dp"
            android:id="@+id/btn_update"
            android:background="@drawable/main_btn_about"
            android:layout_gravity="center_horizontal" />

        <Button
            android:text="О приложении"
            android:id="@+id/btn_about"
            android:textSize="22sp"
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:shadowDx="0"
            android:shadowDy="0"
            android:shadowRadius="15"
            android:layout_gravity="center_horizontal"
            android:textColor="#FFFFFF"
            android:shadowColor="#FFBFCA"
            android:layout_margin="5dp"
            android:background="@drawable/main_btn_update"/>

    </LinearLayout>

</RelativeLayout>